
@{
    ViewData["Title"] = "ChangePassword";
    ViewData["Name"] = "Change Password";
}

@model RegisterViewModel


<div class="row">
    <div class="col-md-6">
        <form asp-action="ChangePassword" asp-controller="UAM">

            <div class="form-group">
                <input class="form-control" asp-for="UserName" type="hidden" placeholder="type password">
            </div>

            <div class="form-group">
                <label class="col-form-label">Password</label>
                <input class="form-control" asp-for="Password" type="password" placeholder="type password">
            </div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        </form>
    </div>
</div>
